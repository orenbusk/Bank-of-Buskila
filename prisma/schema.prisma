generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String?   // Hashed password for manual accounts
  googleId      String?   @unique // For Google OAuth
  role          String    @default("kid") // "admin" or "kid"
  approved      Boolean   @default(false)
  balance       Int       @default(0) // BUD balance (kids only)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  transactions    Transaction[]
  allowanceConfig AllowanceConfig?
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int      // Price in BUD
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "allowance", "purchase", "adjustment"
  amount      Int      // Positive or negative
  description String
  productId   String?  // FK to Product (if purchase)
  createdAt   DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product? @relation(fields: [productId], references: [id])
}

model AllowanceConfig {
  id        String   @id @default(cuid())
  userId    String   @unique
  frequency String   // "daily", "weekly", "monthly"
  amount    Int      // BUD per period
  lastPaid  DateTime?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
